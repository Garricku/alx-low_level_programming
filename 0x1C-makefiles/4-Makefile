CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}

${OBJ}: %.o: %.c
	${CC} ${CFLAGS} -c $< -o $@

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean:
	${RM} -f *~ ${NAME} ${OBJ}

re: fclean all

.PHONY: all clean oclean fclean re
