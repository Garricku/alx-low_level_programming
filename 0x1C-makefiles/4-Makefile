CC = gcc
SRC = *.c
OBJ = *.o
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: main.o school.o
	${CC} ${OBJ} -o ${NAME}

main.o: main.c
	${CC} ${CFLAGS} -c main.c -o $@

school.o: school.c
	${CC} ${CFLAGS} -c school.c -o $@

clean:
	${RM} -f *~ ${NAME}

oclean:
	${RM} -f ${OBJ}

fclean:
	${RM} -f *~ ${NAME} ${OBJ}

re: fclean all

.PHONY: all clean oclean fclean re
